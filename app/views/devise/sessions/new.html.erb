<div class="container">
  <div class="row">
    <div class="col-sm-8 col-md-6 col-lg-5 my-4">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title d-flex justify-content-center text-primary algn-items-center text-capitalize">Log In</h1>
<hr>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                label_html: { class: "w-100"},
                input_html: { autocomplete: "email", class: " input mb-3" } %>
    <%= f.input :password,
                required: false,
                wrapper: false,
                label_html: { class: "w-100"},
                input_html: { class: " input mb-3" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

        </div>
      </div>
    </div>
  </div>
</div>
