<%= simple_form_for(Post.new) do |f| %>
  <%= f.error_notification %>
    <div class="d-flex">
      <div class="w-100 my-2 ">
        <%= f.input :title,
         required: true,
         label: "Post Title", 
         input_html: { class: ""},
         wrapper: false, 
         label_html: {class: "lable "},
          placeholder: "Title" %>
        
        <%= f.input :post, required: true, label: "Post something", input_html: { class: "p-3 col-12"}, wrapper: false,
          label_html: {class: "label d-flex"}, autofocus: true, placeholder: "Compose a new Posts..." %>
      </div>

  </div>
  <%= f.button :submit, class: "btn btn-info mb-3" %>
<% end %>